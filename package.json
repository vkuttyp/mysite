{
  "name": "docus-workspace",
  "description": "Minimal Documentation theme and CLI for shared usage across Nuxt modules",
  "version": "5.4.0",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nuxt-content/docus.git"
  },
  "private": true,
  "license": "MIT",
  "scripts": {
    "dev": "bun run docs:dev",
    "docs:dev": "cd docs && nuxt dev --extends ../layer",
    "docs:build": "nuxt build docs --extends ../layer",
    "dev:prepare": "nuxt prepare layer && nuxt prepare docs --extends ../layer",
    "lint": "eslint .",
    "typecheck": "nuxt typecheck layer",
    "verify": "bun run dev:prepare && bun run lint && bun run typecheck && bun run docs:build",
    "layer:release": "release-it --config .release-it.layer.json && cd layer && npm publish",
    "cli:release": "release-it --config .release-it.cli.json && cd cli && npm publish",
    "release": "bun run layer:release && bun run cli:release && release-it"
  },
  "devDependencies": {
    "@nuxt/eslint": "^1.12.1",
    "@nuxt/eslint-config": "^1.12.1",
    "@release-it/bumper": "^7.0.5",
    "@release-it/conventional-changelog": "^10.0.4",
    "eslint": "^9.39.2",
    "nuxt": "4.2.2",
    "release-it": "^19.1.0",
    "typescript": "^5.9.3",
    "vue-tsc": "^3.1.8"
  },
  "dependencies": {
    "@iconify-json/lucide": "^1.2.81",
    "@iconify-json/simple-icons": "^1.2.63",
    "@iconify-json/vscode-icons": "^1.2.37",
    "@nuxt/content": "^3.9.0",
    "@nuxt/icon": "^2.1.1",
    "@nuxt/image": "^2.0.0",
    "@nuxt/ui": "^4.3.0",
    "@nuxtjs/i18n": "^10.2.1",
    "@nuxtjs/mcp-toolkit": "^0.5.2",
    "@nuxtjs/mdc": "^0.19.1",
    "@nuxtjs/plausible": "^2.0.1",
    "@nuxtjs/robots": "^5.6.7",
    "@vercel/analytics": "^1.6.1",
    "@vercel/speed-insights": "^1.3.1",
    "@vueuse/core": "^14.1.0",
    "better-sqlite3": "^12.5.0",
    "defu": "^6.1.4",
    "exsolve": "^1.0.8",
    "git-url-parse": "^16.1.0",
    "minimark": "^0.2.0",
    "motion-v": "^1.7.4",
    "nuxt-llms": "^0.1.3",
    "nuxt-og-image": "^5.1.13",
    "nuxt-studio": "1.0.0-beta.0",
    "pkg-types": "^2.3.0",
    "scule": "^1.3.0",
    "tailwindcss": "^4.1.18",
    "ufo": "^1.6.1",
    "unist-util-visit": "^5.0.0",
    "zod": "^4.2.1",
    "zod-to-json-schema": "^3.25.0"
  }
}
